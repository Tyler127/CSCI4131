.container.mb-5
  form#addEvent(name='addEvent' method='post' action='/updateEvent')
    
    .form-group
      label(for='nameInput') Event
      input#nameInput.form-control(type='text' name='event' pattern='[a-zA-Z0-9\s]+' title='Event must be alphanumeric' required='' value= event)
      small#eventHelp.form-text.text-muted
        | Event name must be alphanumeric
    
    .form-group
      label(for='dayInput') Day of Week
      select#dayInput.form-control(name='day' value= day)
        option
          | Sunday
        option
          | Monday
        option
          | Tuesday
        option
          | Wednesday
        option
          | Thursday
        option
          | Friday
        option
          | Saturday

    .form-group
      label(for='startTimeInput') Start
      input#startTimeInput.form-control(type='time' name='start' required='' value= start)
    
    .form-group
      label(for='endTimeInput') End
      input#endTimeInput.form-control(type='time' name='end' required='' value= end)
    
    .form-group
      label(for='phoneInput') Phone
      input#phoneInput.form-control(type='text' name='phone' required='' value= phone)
    
    .form-group
      label(for='locationInput') Location
      input#locationInput.form-control(type='text' name='location' required='' value= location)
    
    .form-group
      label(for='extraInput') Extra Info
      input#extraInput.form-control(type='text' name='info' required='' value= info)
    
    .form-group
      label(for='urlInput') Enter URL for the Extra Info
      input#urlInput.form-control(type='url' name='url' required='' value= url)
    
    .form-group
      input#urlInput.form-control.d-none(type='id' name='id' value= id)
    
    button.btn.btn-block.btn-primary(type='submit') Save Changes
